{% extends 'base.html.twig' %}

{% block title %}Farmeetic - Accueuil{% endblock %}

{% block body %}
	<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="images/h2-slide1_.jpg" class="d-block w-100" alt="...">
				<h1 class="text-white">Respectueux de l'environement</h1>
			</div>
			<div class="carousel-item">
				<img src="images/h2-slide2_.jpg" class="d-block w-100" alt="...">
				<h1 class="text-white">Prix plus équitables</h1>
			</div>
			<div class="carousel-item">
				<img src="images/h2-slide3_.jpg" class="d-block w-100" alt="...">
				<h1 class="text-white">Produits locaux</h1>
			</div>
		</div>
		<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>
	
	<div class="info">
		<div class="farm-card mr-5 ml-5 mt-5 mb-5" style="width: 18rem;">
			<a href="/producteurs">
				<img src="images/h2news1.jpg" class="img-border card-img-top">
			</a>
			<div class="card-content">
				<a href="/producteurs" class="btn btn-success font-weight-bold">{{ nbProducer }} Producteurs</a>
			</div>
		</div>
		
		<div class="farm-card mr-5 ml-5 mt-5 mb-5" style="width: 18rem;">
			<a href="/produits">
				<img src="images/vegetables-752153_1920.jpg" class="img-border card-img-top">
			</a>
			<div class="card-content">
				<a href="/produits" class="btn btn-success font-weight-bold">{{ nbProducts }} Produits</a>
			</div>
		</div>
	</div>
	
	<hr><br>
	
	<div class="product-list">
		
		{% for p in products %}
			<div class="card" style="width: 18rem;">
				<a href="produits/{{ p.id }}">
					<img src="{{ p.sourceImage }}" class="card-img-top">
				</a>
				<div class="card-body">
					<h5 class="card-title">{{ p.name }}</h5>
					<p class="card-text">{{ p.price }}€ le Kg</p>
					<p class="card-text">{{ p.description }}</p>
					<a href="produits/{{ p.id }}" class="btn btn-success">En savoir plus</a>
				</div>
			</div>
		{% endfor %}
		
		
	
	</div>
	
	<div class="center">
		<a href="/produits"  type="button" class="plus-de-produits btn btn-success btn-lg">Plus de produits</a>
	</div>
	<hr>
{% endblock %}
