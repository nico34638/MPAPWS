{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="css/custom.css">
{% endblock %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <section class="wf100 p100 inner-header">
        <div class="container">
            <h1>Mon compte</h1>
            <ul>
                <li><a href="#">Accueil</a></li>
                <li><a href="#">Mon compte</a></li>
            </ul>
        </div>
    </section>

    <section class="wf100 p80">
        <div class="container">
            <div class="row">
                <div class="col-lg-10">
                    <div class="myaccount-form">
                        <h3>Création du compte </h3>
                        <form method="post" enctype="multipart/form-data">
                            {{ form_start(form) }}
                            {{ form_errors(form) }}

                            <ul class="row">
                                <li class="col-md-6">
                                    <div class="input-group">
                                        <div class="col-md-10">
                                            {{ form_label(form.firstName) }}
                                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder': 'Votre prénom'}}) }}
                                        </div>
                                    </div>
                                </li>
                                <li class="col-md-6">
                                    <div class="input-group">
                                        <div class="col-md-10">
                                            {{ form_label(form.lastName) }}
                                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
                                        </div>
                                    </div>
                                </li>
                                <li class="col-md-6">
                                    <div class="input-group">
                                        <div class="col-md-10">
                                            {{ form_label(form.email) }}
                                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre email'}}) }}
                                        </div>
                                    </div>
                                </li>
                                <li class="col-md-6">
                                    <div class="input-group">
                                        <div class="col-md-10">
                                            {{ form_label(form.username) }}
                                            {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': "Votre nom d'utilisateur"}}) }}
                                        </div>
                                    </div>
                                </li>
                                <li class="col-md-6">
                                    <div class="input-group">
                                        <div class="col-md-10">
                                            {{ form_label(form.password.first) }}
                                            {{ form_widget(form.password.first, {'attr': {'class': 'form-control', 'placeholder': "Votre mot de passe"}}) }}
                                        </div>
                                    </div>
                                </li>
                                <li class="col-md-6">
                                    <div class="col-md-10">
                                        {{ form_label(form.password.second) }}
                                        {{ form_widget(form.password.second, {'attr': {'class': 'form-control', 'placeholder': "Votre mot de passe"}}) }}
                                    </div>
                                </li>


                                <li class="col-md-8">
                                    <div class="col-md-10">
                                        {{ form_label(form.city) }}
                                        {{ form_widget(form.city, {'attr': {'class': 'form-control', 'placeholder': "Votre ville"}}) }}
                                    </div>
                                </li>
                                <li class="col-md-4">
                                    <div class="col-md-10">
                                        {{ form_label(form.postalCode) }}
                                        {{ form_widget(form.postalCode, {'attr': {'class': 'form-control', 'placeholder': "Votre code postal"}}) }}
                                    </div>
                                </li>
                                <li class="col-md-9">
                                    <div class="col-md-12">
                                        {{ form_label(form.street) }}
                                        {{ form_widget(form.street, {'attr': {'class': 'form-control', 'placeholder': "Votre rue"}}) }}
                                    </div>
                                </li>

                                <li class="col-md-12">

                                    {{ form_row(form.imageFile) }}

                                </li>

                                <li class="col-md-12">
                                    <div class="input-group form-check">
                                        <div class="col-md-12">
                                            {{ form_widget(form.producer, {'attr': {'class': 'form-check-input'}}) }}
                                            {{ form_label(form.producer) }}
                                        </div>
                                    </div>
                                </li>
                                <li class="col-md-12">
                                    <div class="input-group form-check">
                                        <div class="col-md-12">
                                            {{ form_widget(form.droitUtilisation, {'attr': {'class': 'form-check-input'}}) }}
                                            {{ form_label(form.droitUtilisation) }}
                                        </div>
                                    </div>
                                </li>
                                <li class="col-md-12">
                                    <button class="register">Créer votre compte</button>
                                </li>
                                {{ form_end(form) }}
                            </ul>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </section>

{% endblock %}
