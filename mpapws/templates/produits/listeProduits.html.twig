{% extends 'base.html.twig' %}

{% block title %}Listes des produits !{% endblock %}

{% block body %}


    <div class="container" style="margin-top: 80px">
        <div class="row">

            {% for produit in produits %}
                <div class="col-md-4">
                    <div class="card">
                        <img src="{{ produit.sourceImage  }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{ produit.nom }}</h5>
                            <p class="card-text">{{ produit.description | slice(0, 100) }}</p>
                        </div>

                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}
