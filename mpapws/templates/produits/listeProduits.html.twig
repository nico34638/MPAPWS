{% extends 'base.html.twig' %}

{% block title %}Listes des produits !{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Voici la liste des produits disponible : ({{ controller_name }})! âœ…</h1>
        <ul>
            {% for pdt in produits %}
                <img src="{{ pdt.sourceImage }}">
                <div class="container">
                    <div class="row">
                        <div class="col">{{ pdt.nom }} : {{ pdt.prix }} <br>{{ pdt.description }} </div>
                    </div>
                </div>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
