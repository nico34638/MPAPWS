{% extends 'base.html.twig' %}

{% block title %}Détails produit{% endblock %}

{% block body %}
	<div class="container" style="margin-top: 80px">
		
		<hr>
		<br>
		
		<div class="flex-wrap" style="display: flex; justify-content: space-around; align-items: center;">
			<div style="width: 18rem;">
				<div style="margin: auto;text-align: center">
					<img src="{{ product.sourceImage }}" class="img-thumbnail" style="width: 400px;">
				</div>
			</div>
			
			<div class="card" style="width: 18rem;">
				<div class="card-body" >
					<br>
					<h1 class="card-title">{{ product.name }}</h1>
					<h2 class="card-subtitle mb-2 text-muted">{{ product.price }} €/Kg</h2>
					<br>
					<a href="/producteurs/{{ producer.id }}" class="btn btn-primary" alt="Le producteur">{{ producer.firstName }} {{ producer.lastName }}</a>
					<p style="margin-top: 5%">
						{{ producer.address }}
						<br>
						<a style="margin-top: 1%" href="/carte">Carte</a>
					</p>
				</div>
			</div>
		</div>
		
		<br>
		<hr>
		<br>
		
		<div style="margin-bottom: 20%">
			<p style="font-size: 2em">{{ product.description }}</p>
		</div>
	</div>

{% endblock %}
