{% extends 'base.html.twig' %}

{% block title %}Listes des produits{% endblock %}

{% block body %}
	
	
	<div class="container" style="margin-top: 80px">
		<div class="row">
			
			{% for p in products %}
				<div class="col-md-4">
					<div class="card card-perso">
						<a href="/produits/{{ p.id }}">
							<img src="{{ p.sourceImage }}" class="card-img-top" alt="...">
						</a>
						<div class="card-body">
							<h5 class="card-title">{{ p.name }}</h5>
							<p class="card-text">{{ p.description | slice(0, 100) }}</p>
							<p class="card-text">
								<a href="/produits/{{ p.id }}" class="btn btn-primary"
								   style="background-color: #1b5e20; border-color: #1b5e20;">
									En savoir plus
								</a>
							</p>
						</div>
					
					</div>
				</div>
			{% endfor %}
		
		</div>
	</div>
{% endblock %}
