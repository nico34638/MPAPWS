{% extends 'base.html.twig' %}

{% block title %}Liste des producteurs{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 80px">
        <div class="row">

            {% for producer in producers %}
                <div class="col-md-4">
                    <div class="card card-perso" >
                        <img src="https://via.placeholder.com/150" class="card-img" alt="ntm">
                        <div class="card-body" >
                            <h5 class="card-title">{{ producer.firstName }} {{ producer.lastName }}</h5>
                            <p class="card-text">Bonjour je suis le colonel moutarde et j'ai un micro-p√©nis</p>
                            <p class="card-text"><small class="text-muted">{{ producer.email }}</small></p>
                            <p class="card-text"><a href="#" class="btn btn-success" style="background-color: #1b5e20; border-color: #1b5e20;">En savoir plus</a></p>
                        </div>
                    </div>
                </div>
            {%  endfor %}
        </div>
    </div>
{% endblock %}